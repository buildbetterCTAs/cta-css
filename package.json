{
  "name": "cta.css",
  "version": "2.0.2",
  "homepage": "https://www.responsivectabuilder.com",
  "description": "Styles for Responsive CTA Builder CTA embed codes.",
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix",
    "build-autoprefix": "postcss --no-map --use autoprefixer --output dist/cta.css dist/cta.css",
    "build-clean": "rimraf dist",
    "build-sass": "node-sass --output-style compressed cta.sass dist/cta.css"
  },
  "main": "dist/cta.css",
  "files": [
    "cta.sass",
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildBetterCTAs/cta.css.git"
  },
  "bugs": {
    "url": "https://github.com/buildBetterCTAs/cta.css/issues"
  },
  "author": "Responsive CTA Builder",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "eslint": "^4.19.1",
    "node-sass": "^4.9.0",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2"
  }
}
